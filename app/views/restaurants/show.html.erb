<div class="container mt-5">
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>

  <div class="card">
    <div class="card-header">
      <h1><%= @restaurant.name %></h1>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Location:</strong> <%= @restaurant.location %></p>
      <p class="card-text"><strong>Cuisine:</strong> <%= @restaurant.cuisine %></p>
      <p class="card-text"><strong>Rating:</strong> <%= @restaurant.rating %></p>
    </div>
  </div>

  <div class="mt-4">
    <h2>Reviews:</h2>
    <% @restaurant.reviews.each do |review| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><strong>User:</strong> <%= review.user_name %></h5>
          <p class="card-text"><strong>Rating:</strong> <%= review.rating %></p>
          <p class="card-text"><strong>Content:</strong> <%= review.content %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn" %> |
    <%= link_to "Back to restaurants", restaurants_path, class: "btn" %>

    <%= button_to "Destroy this restaurant", @restaurant, method: :delete, data: { confirm: "Are you sure?" }, class: "btn" %>
  </div>
</div>
